<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:reg="http://www.dangdang.com/schema/ddframe/reg"
       xmlns:job="http://www.dangdang.com/schema/ddframe/job" xmlns:context="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.dangdang.com/schema/ddframe/reg
                        http://www.dangdang.com/schema/ddframe/reg/reg.xsd
                        http://www.dangdang.com/schema/ddframe/job
                        http://www.dangdang.com/schema/ddframe/job/job.xsd">


    <!--配置作业注册中心，多个zk地址以逗号隔开 -->
    <reg:zookeeper id="regCenter" server-lists="${esjob.zk.address}" namespace="${esjob.zk.namespace}"
                   base-sleep-time-milliseconds="${esjob.zk.baseSleepTimeMilliseconds}"
                   max-sleep-time-milliseconds="${esjob.zk.maxSleepTimeMilliseconds}" max-retries="${esjob.zk.maxRetries}"/>

    <!-- 配置作业-->
    <job:simple id="${esjob.id.testJob1}" class="${esjob.class.testJob1}" description="${esjob.desc.testJob1}" cron="${esjob.cron.testJob1}"
				registry-center-ref="regCenter" sharding-total-count="${esjob.shardingTotalCount}"
				monitor-execution="${esjob.monitorExecution}" failover="${esjob.failover}" disabled="${esjob.disabled}"
				overwrite="${esjob.overwrite}" sharding-item-parameters="${esjob.shardingItemParameters}">
    </job:simple>

    <job:simple id="${esjob.id.testJob2}" class="${esjob.class.testJob2}" description="${esjob.desc.testJob2}" cron="${esjob.cron.testJob2}"
				registry-center-ref="regCenter" sharding-total-count="${esjob.shardingTotalCount}"
				monitor-execution="${esjob.monitorExecution}" failover="${esjob.failover}" disabled="${esjob.disabled}"
				overwrite="${esjob.overwrite}" sharding-item-parameters="${esjob.shardingItemParameters}">
    </job:simple>

</beans>